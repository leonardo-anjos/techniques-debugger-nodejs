  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "attach",
      "name": "Attach to Remote",
      "address": "TCP/IP address of process to be debugged", // 192.168.XX.XX
      "port": 9229,
      "localRoot": "${workspaceFolder}",
      "remoteRoot": "Absolute path to the remote dicrectory containing the program", // pwd - Users/username/Desktop/remote-vscode
      "trace": true,
      "sourceMaps": true,
      "skipFiles": [
        "<node_internals>/**"
      ]
    }
  ]
}